						<div class="movie-list">
						<%							
							for(var id in myMovies){								
								if(myMovies[id].content != undefined){
							%>
							<div class="movie movief" id="<%=id%>">
								<figure class="movie-poster"><img src="https://image.tmdb.org/t/p/w185<%= myMovies[id].content.details.poster_path%>" alt="<%= myMovies[id].content.details.title%>"></figure>
								<div class="movie-title"><a href="single?id=<%=id%>"><%= myMovies[id].content.details.title%></a></div>
								<div class="movie-title"><i class="fa fa-star" aria-hidden="true"></i></div>
								<p class="giveMeEllipsis"><%= myMovies[id].content.details.overview%></p>
							</div>
							<%}
							}
						%>
						</div> <!-- .movie-list -->

