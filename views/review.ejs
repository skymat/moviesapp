	<body>
		
		
		<div id="site-content">
			<header class="site-header">
				<div class="container">
					<a href="home" id="branding">
						<img src="images/logo.png" alt="" class="logo">
						<div class="logo-copy">
							<h1 class="site-title">Moviz</h1>
							<small class="site-description">Manage your best movies</small>
						</div>
					</a> <!-- #branding -->

					<div class="main-navigation"><div id="loginuser" class="log"><%=isLoged ? login : ""%></div>
						<button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
						<ul class="menu">
							<li class="menu-item "><a href="home">Last releases</a></li>
							<li class="menu-item current-menu-item"><a href="review">My movies</a></li>
							<li class="menu-item"><a href="contact">Contact</a></li>
						</ul> <!-- .menu -->

						<form action="#" class="search-form">
							<input type="text" placeholder="Search...">
							<button><i class="fa fa-search"></i></button>
						</form>
					</div> <!-- .main-navigation -->

					<div class="mobile-navigation"></div>
				</div>
			</header>
			<main class="main-content">
				<div class="container">
					<div class="page">
			
            
